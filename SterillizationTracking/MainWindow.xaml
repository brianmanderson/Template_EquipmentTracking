<Window x:Class="SterillizationTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SterillizationTracking"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1335">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,73,0,0">
            <StackPanel Margin="23,27,41,88" x:Name="KitStackPanel">
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="Add_Kit_Button" Content="Add Kit" IsEnabled="False" HorizontalAlignment="Left" Height="36" Margin="532,30,0,0" VerticalAlignment="Top" Width="136" Click="Add_Kit_Button_Click"/>
        <ComboBox x:Name="Kit_ComboBox" HorizontalAlignment="Left" Margin="195,30,0,0" VerticalAlignment="Top" Width="156" Height="36"
                  SelectionChanged="Kit_ComboBox_SelectionChanged" SelectedIndex="0">
        </ComboBox>
        <ComboBox x:Name="KitNumber_ComboBox" HorizontalAlignment="Left" Margin="379,30,0,0" VerticalAlignment="Top" Width="141" Height="36"
                  SelectionChanged="KitNumber_ComboBox_SelectionChanged" IsEnabled="False">
        </ComboBox>
        <ComboBox x:Name="FilterNameComboBox" Margin="687,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="202" Height="36"
                  SelectionChanged="FilterNameComboBox_SelectionChanged" IsEnabled="True" SelectedIndex="0"/>
        <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Left" Margin="905,39,0,0" VerticalAlignment="Top" Height="18" Width="420">
            For issues, please e-mail Brian Anderson @ brian_anderson@med.unc.edu
        </TextBlock>
        <Button x:Name="CreateTemplate" Content="Create Template" IsEnabled="True" HorizontalAlignment="Left" Height="36" Margin="32,29,0,0" VerticalAlignment="Top" Width="136" Click="CreateTemplate_Button_Click"/>
    </Grid>
</Window>
